@model OrderProcessingApp.Models.Order
@{
    ViewData["Title"] = "Order Entry";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Order Entry</h2>
        </div>
        <div class="card-body">
            <form asp-action="ProcessOrder" method="post">
                <div class="mb-3">
                    <label class="form-label">Order Amount:</label>
                    <input asp-for="Amount" class="form-control" placeholder="Enter order amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Customer Type:</label>
                    <select asp-for="CustomerType" class="form-select">
                        <option value="New">New</option>
                        <option value="Loyal">Loyal</option>
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Submit Order</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




